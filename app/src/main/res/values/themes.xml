    <style name="Base.Theme.UlikBatik" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.UlikBatik" parent="Base.Theme.UlikBatik" />

    <style name="Theme.UlikBatik.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UlikBatik.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UlikBatik.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
