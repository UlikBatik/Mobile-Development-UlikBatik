<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow item -->
    <item android:right="6dp" android:top="6dp"> <!-- Adjust the offsets as needed -->
        <shape>
            <solid android:color="#40000000" /> <!-- Shadow color (semi-transparent black) -->
